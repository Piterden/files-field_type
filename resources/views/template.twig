<div class="template hidden">

    <div class="media">

        <div class="media-left">
            <a href="#" target="_blank" class="preview">
                <img class="media-object img-rounded" data-dz-thumbnail/>
                {{ icon('file') }}
            </a>

            <div class="progress progress-xs" data-progress="file" style="visibility: hidden;">
                <div class="progress-bar progress-bar-success" data-dz-uploadprogress></div>
            </div>
        </div>

        <div class="media-body">

            <strong class="media-heading" data-dz-name></strong>

            <p class="error" data-dz-size data-dz-errormessage></p>

            <a class="btn btn-xs btn-danger" data-action="remove">
                {{ icon('times-circle') }}
                <span>{{ trans('anomaly.field_type.files::button.remove') }}</span>
            </a>

            <a class="btn btn-xs btn-warning edit" data-toggle="modal" data-target="#modal" data-action="edit">
                {{ icon('pencil') }}
                <span>{{ trans('streams::button.edit') }}</span>
            </a>
        </div>

        <input type="hidden" name="{{ field_type.input_name }}[]">
    </div>

</div>
